<article class={{classes.preview}}>
	{{#if imageSrc}}
		<img src={{imageSrc}}

			{{#if imageAlt}}
				alt={{imageAlt}} 
			{{/if}} 

			class={{classes.image}} />
	{{else}}
		<div class={{classes.image}} ></div>	
	{{/if}}



	<div class={{classes.textContent}}>
		<div class={{classes.row}}>
			<p class={{classes.title}}>
				{{{title}}}
			</p>

			<time class={{classes.time}}>
				{{{time}}}
			</time>
		</div>

		<div class={{classes.row}}>
		<p class={{classes.lastMessage}}>
			{{{lastMessage}}}
		</p>

		{{#if newMessagesCount}}
			<span class={{classes.counter}}>
				{{{newMessagesCount}}}
			</span>
		{{/if}}
		</div>


	</div>
</article>