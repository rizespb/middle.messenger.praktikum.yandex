    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "mocha": "^10.3.0",
    "sass": "1.70.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "stylelint": "16.2.1",
