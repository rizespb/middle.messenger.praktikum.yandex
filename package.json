    "npm": "8.11.0"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.8",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@testing-library/user-event": "^14.5.2",
    "@types/chai": "^4.3.13",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.11.16",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.8",
